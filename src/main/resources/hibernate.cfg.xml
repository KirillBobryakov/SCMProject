<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-configuration PUBLIC
        "-//Hibernate/Hibernate Configuration DTD//EN"
        "http://hibernate.sourceforge.net/hibernate-configuration-3.0.dtd">

<hibernate-configuration>
    <session-factory>
        <property name="connection.url">jdbc:mysql://localhost:3306/scmweb_db</property>
        <property name="connection.driver_class">com.mysql.jdbc.Driver</property>
        <property name="connection.username">root</property>
        <property name="connection.password"></property>
        <mapping class="com.springapp.domain.Country"/>
        <mapping class="com.springapp.domain.Address"/>
        <mapping class="com.springapp.domain.Company"/>
        <mapping class="com.springapp.domain.Procurement"/>
        <mapping class="com.springapp.domain.ProcurementGood"/>

        <!--property name="connection.url">jdbc:mysql://localhost:3306/scmweb_db</property>
